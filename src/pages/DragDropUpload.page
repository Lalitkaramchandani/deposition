                                    <div class="dragAndDropTargetTextDiv">Drag and Drop Files Here</div>
                                </div>
                                <br/>

                                <b style="float:left;">Select File :</b>
                                <input style="float:left;" id="file" class="file" type="file" name="files" multiple="true" />
