                                                        </td>
                                                        <td style="padding:5px;" align="center">
                                                            <apex:inputfield onchange="updateFileType({!i},this.value);" style="border-left: 3px solid red;" value="{!AWSS3Obj.File_Type__c}" required="true" />
                                                            <apex:variable var="i" value="{!i+1}"/>
