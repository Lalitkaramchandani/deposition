     function callSendEmail(){
        $("#pnlErrMessage").hide();
        countOfS3Objects = $('.attendeeChk:checked').length;
        if(countOfS3Objects == 0){
             $("#errMsg").html('Please select at least one Attendee.');
             $("#pnlErrMessage").show();
        }else{
            sendEmail();
